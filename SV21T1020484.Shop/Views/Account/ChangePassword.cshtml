@{
    ViewBag.Title = "Đổi mật khẩu";
    var user = User.GetUserData();
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Đổi mật khẩu</h4>
            <form action="~/Account/ChangePassword" method="post">
                <input type="hidden" name="userName" value="@user.UserName" />
                <div class="form-group mb-3">
                    <label for="oldPassword">Mật khẩu cũ:</label>
                    <input type="password" class="form-control" id="oldPassword" name="oldPassword" required autofocus>
                    @Html.ValidationMessage("oldPass")
                </div>

                <div class="form-group mb-3">
                    <label for="newPassword">Mật khẩu mới:</label>
                    <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                </div>

                <div class="form-group mb-3">
                    <label for="confirmPassword">Xác nhận lại mật khẩu:</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                    @Html.ValidationMessage("confirmPass")
                </div>

                <div class="d-flex justify-content-between">
                    <a href="~/" class="btn btn-default">Bỏ qua</a>
                    <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
                </div>
            </form>
        </div>
    </div>
</div>
