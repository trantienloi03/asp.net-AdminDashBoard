@model SV21T1020484.DomainModels.CustomerDTO
@{
}
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4" style="width: 400px;">
            <h3 class="text-center mb-4">Đăng Ký</h3>
            @Html.ValidationMessage("Error")
            <form id="registerForm" method="post" action="/Account/Save">
                <div class="mb-3">
                    <label for="fullName" class="form-label">Họ và Tên</label>
                    <input type="text" class="form-control" id="fullName" name="@nameof(Model.CustomerName)" placeholder="Nhập họ và tên" required>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Tên lien he</label>
                    <input type="text" class="form-control" id="username" name="@nameof(Model.ContactName)" placeholder="Nhập tên đăng nhập" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="@nameof(Model.Email)" placeholder="Nhập email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Mật khẩu</label>
                    <input type="password" class="form-control" id="password" name="@nameof(Model.password)" placeholder="Nhập mật khẩu" required>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmpassword" placeholder="Nhập lại mật khẩu" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Đăng Ký</button>
                </div>
                <div class="mt-3 text-center">
                    <small>Đã có tài khoản? <a href="~/Account/Login" class="text-decoration-none">Đăng nhập</a></small>
                </div>
            </form>
        </div>
    </div>
<script>
    document.getElementById('registerForm').addEventListener('submit', function (event) {
        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirmPassword').value;

        if (password !== confirmPassword) {
            event.preventDefault(); // Ngăn không cho gửi biểu mẫu
            alert('Mật khẩu và xác nhận mật khẩu không khớp!');
        }
    });
</script>

