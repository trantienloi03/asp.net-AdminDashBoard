@model SV21T1020484.DomainModels.Supplier
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="/Supplier/Save" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />
            <div class="form-group">
                <label></label>
                @Html.ValidationMessage("existed")
            </div>
            <div class="form-group">
                <label>Tên nhà cung cấp</label>
                <input class="form-control" type="text" name="@nameof(Model.SupplierName)" value="@Model.SupplierName" />
                @Html.ValidationMessage(nameof(Model.SupplierName))
            </div>
            <div class="form-group">
                <label>Tên giao dịch</label>
                <input class="form-control" type="text" name="@nameof(Model.ConTactName)" value="@Model.ConTactName" />
                @Html.ValidationMessage(nameof(Model.ConTactName))
            </div>
            <div class="form-group">
                <label>Tỉnh thành</label>
                <select class="form-control" name="@nameof(Model.Province)">
                    @foreach (var p in SV21T1020484.BusinessLayers.CommonDataService.ListOfProvices())
                    {
                        if (p.ProvinceName == Model.Province)
                        {
                            <option selected value="@p.ProvinceName">@p.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@p.ProvinceName">@p.ProvinceName</option>

                        }
                    }
                </select>
                @Html.ValidationMessage(nameof(Model.Province))
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input class="form-control" type="text" name="@nameof(Model.Address)" value="@Model.Address" />
                @Html.ValidationMessage(nameof(Model.Address))
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <input class="form-control" type="text" name="@nameof(Model.Phone)" value="@Model.Phone" />
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" name="@nameof(Model.Email)" value="@Model.Email" />
                @Html.ValidationMessage(nameof(Model.Email))
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-info">
                    <i class="fa fa-floppy-o">Xác nhận lưu</i>
                </button>
                <a href="~/Supplier" class="btn btn-default">Quay lại</a>
            </div>

        </form>
    </div>
</div>
