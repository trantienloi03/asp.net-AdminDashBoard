@model SV21T1020484.DomainModels.Customer
@{
}
<div class="box box-primary">
    <div class="box-body">
    <form action="/Customer/Save" method="post">
        <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />

        <div class="form-group">
            <label>Tên khách hàng</label>
            <input class="form-control"type="text" 
                    name="@nameof(Model.CustomerName)" 
                    value="@Model.CustomerName" />
            @Html.ValidationMessage(nameof(Model.CustomerName))
        </div>
        <div class="form-group">
            <label>Tên giao dịch</label>
            <input class="form-control" type="text" 
                    name="@nameof(Model.ContactName)" 
                    value="@Model.ContactName" />
             @Html.ValidationMessage(nameof(Model.ContactName))
        </div>
        <div class="form-group">
            <label>Điện thoại</label>
            <input class="form-control" type="text" 
                    name="@nameof(Model.Phone)" 
                    value="@Model.Phone" />
            @Html.ValidationMessage(nameof(Model.Phone))
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" type="text" 
                    name="@nameof(Model.Email)" 
                    value="@Model.Email" />
             @Html.ValidationMessage(nameof(Model.Email))
        </div>
        <div class="form-group">
            <label>Địa chỉ</label>
            <input class="form-control" type="text"
                    name="@nameof(Model.Address)"    
                    value="@Model.Address" />
            @Html.ValidationMessage(nameof(Model.Address))
        </div>
        <div class="form-group">
            <label>Tỉnh thành</label>
           <select class="form-control" name="@nameof(Model.Province)">
                    @foreach(var p in SV21T1020484.BusinessLayers.CommonDataService.ListOfProvices())
                    {
                        if(p.ProvinceName == Model.Province)
                        {
                            <option selected value="@p.ProvinceName">@p.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@p.ProvinceName">@p.ProvinceName</option>

                        }
                    }
           </select>
                @Html.ValidationMessage(nameof(Model.Province))
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="@nameof(Model.IsLocked)" value="true"@(Model.IsLocked? "checked":"")/> 
                    Tài khoản đang bị khóa
            </label>
           
        </div>
        <div class="form-group text-right">
            <button type="submit" class="btn btn-info">
                <i class="fa fa-floppy-o">Xác nhận lưu</i>
            </button>
            <a href="~/Customer">Quay lại</a>
        </div>

        </form>
    </div>
</div>
