@model SV21T1020484.DomainModels.Category
@{
}
<div class="box box-info">
    <div class="box-body">
        <form action="/Category/Save" method="post">
           
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    @Html.ValidationMessage(nameof(Model.CategoryID))
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Tên loại hàng</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Nhập mặt hàng" name="@nameof(Model.CategoryName)" value="@Model.CategoryName">
                    @Html.ValidationMessage(nameof(Model.CategoryName))
                </div>

            </div>
            <div class="form-group row">
                <label for="Name" class="col-sm-2 col-form-label">Mô tả</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Name" placeholder="Nhập mô tả" name="@nameof(Model.Description)" value="@Model.Description">
                    @Html.ValidationMessage(nameof(Model.Description))
                </div>
            </div>
          
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-info">
                        <i class="fa fa-floppy-o">Xác nhận lưu</i>
                    </button>
                    <a href="~/Category">Quay lại</a>
                </div>
            </div>
        
        </form>

    </div>


</div>
