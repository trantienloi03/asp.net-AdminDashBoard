@model SV21T1020484.Web.Models.CategorySearchResult
@{
    Layout = null;
}
<p style="margin:10px 0 10px 0">
    Có <strong>@Model.RowCount</strong> Loại hàng trong <strong>@Model.PageCount</strong> trang
</p>
<div class="table-reponsive">
    <table class="table table-bordered table-striped table-hover">
        <thead class="bg-info">
            <tr>
                <th>Tên loại hàng</th>
                <th>Mô tả</th>
                <th style="width:80px"></th>
            </tr>

        </thead>
        <tbody>
            @{
                foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td>
                            <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>

                }
            }

        </tbody>
    </table>
</div>
<div class="text-center ">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }

    </ul>
</div>
