@model SV21T1020484.Web.Models.ShipperSearchResult
@{
    Layout = null;
}
<p style="margin:10px 0 10px 0">
    Có <strong>@Model.RowCount</strong> nhân viên giao hàng trong <strong>@Model.PageCount </strong> trang
</p>
<div class="table-reponsive">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Tên giao hàng</th>
                <th>Điện thoại</th>
                <th style="width:80px"></th>
            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ShipperName</td>
                    <td>@item.Phone</td>
                    <td>
                        <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div class="text-center ">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javácript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }

    </ul>
</div>
